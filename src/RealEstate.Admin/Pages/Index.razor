@page "/"

@using RealEstate.Admin.Services

@inject ICurrentAccountService _currentAccountService
@inject NavigationManager _navigationManager

@attribute [Authorize]

@code{
    
    protected override async Task OnInitializedAsync()
    {
        if (await _currentAccountService.IsAdminAsync() || await _currentAccountService.IsSuperAdminAsync())
        {
            _navigationManager.NavigateTo("/admin");
        }
        else
        {
            _navigationManager.NavigateTo("/agent");
        }
    }
}